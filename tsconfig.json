{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "Bundler",
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "useDefineForClassFields": true,
    "outDir": "./dist",
    "composite": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@systems/*": [
        "src/systems/*"
      ],
      "@authentication/*": [
        "src/systems/authentication/*"
      ],
      "@authentication": [
        "src/systems/authentication/index.ts"
      ],
      "@core": [
        "src/systems/core/index.ts"
      ],
      "@core/*": [
        "src/systems/core/*"
      ],
      "@dependency-injection": [
        "src/systems/dependency-injection/index.ts"
      ],
      "@dependency-injection/*": [
        "src/systems/dependency-injection/*"
      ],
      "@logging": [
        "src/systems/logging/index.ts"
      ],
      "@logging/*": [
        "src/systems/logging/*"
      ]
    },

    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "strictPropertyInitialization": false,
    "resolveJsonModule": true
  },
  "include": [
    "src",
    "tests"
  ]
}